<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:behaviors="clr-namespace:TAS.Avalonia.Behaviors"
        xmlns:controls="clr-namespace:TAS.Avalonia.Controls"
        xmlns:viewModels="clr-namespace:TAS.Avalonia.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="TAS.Avalonia.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="TAS Studio">

    <Design.DataContext>
        <viewModels:MainWindowViewModel/>
    </Design.DataContext>
    
    <NativeMenu.Menu>
        <NativeMenu>
            <NativeMenuItem Header="File">
                <NativeMenu>
                    <NativeMenuItem Header="New File" Gesture="Cmd+N" Command="{Binding NewFileCommand}" />
                    <NativeMenuItemSeparator />
                    <NativeMenuItem Header="Open File..." Gesture="Cmd+O" />
                    <NativeMenuItem Header="Open Previous File" />
                    <NativeMenuItem Header="Open Recent">
                        <NativeMenu>
                            <NativeMenuItem Header="Celeste.tas" />
                        </NativeMenu>
                    </NativeMenuItem>
                    <NativeMenuItem Header="Open Backup">
                        <NativeMenu>
                            <NativeMenuItem Header="Celeste.tas" />
                        </NativeMenu>
                    </NativeMenuItem>
                    <NativeMenuItemSeparator />
                    <NativeMenuItem Header="Save As..." Gesture="Cmd+S" />
                    <NativeMenuItem Header="Convert to LibTAS Inputs..." />
                </NativeMenu>
            </NativeMenuItem>
            <NativeMenuItem Header="Settings">
                <NativeMenu>
                    <NativeMenuItem Header="Send Inputs to Celeste" Gesture="Cmd+D" ToggleType="CheckBox" IsChecked="True" />
                    <NativeMenuItem Header="Auto Remove Mutually Exclusive Actions" ToggleType="CheckBox" IsChecked="True" />
                    <NativeMenuItem Header="Show Game Info" ToggleType="CheckBox" IsChecked="True" />
                    <NativeMenuItem Header="Automatic Backup">
                        <NativeMenu>
                            <NativeMenuItem Header="Enabled" ToggleType="CheckBox" IsChecked="True" />
                            <NativeMenuItem Header="Backup Rate (minutes): 1" />
                            <NativeMenuItem Header="Backup File Count: 100" />
                        </NativeMenu>
                    </NativeMenuItem>
                    <NativeMenuItem Header="Font..." />
                    <NativeMenuItem Header="Themes">
                        <NativeMenu>
                            <NativeMenuItem Header="Light" ToggleType="Radio" IsChecked="True" />
                            <NativeMenuItem Header="Dark" />
                            <NativeMenuItem Header="Custom" />
                        </NativeMenu>
                    </NativeMenuItem>
                </NativeMenu>
            </NativeMenuItem>
            <NativeMenuItem Header="Toggles">
                <NativeMenu>
                    <NativeMenuItem Header="Hitboxes" Gesture="Cmd+H" Command="{Binding ToggleHitboxesCommand}" />
                    <NativeMenuItem Header="Trigger Hitboxes" Command="{Binding ToggleHitboxesCommand}" />
                    <NativeMenuItem Header="Unloaded Rooms Hitboxes" Command="{Binding ToggleHitboxesCommand}" />
                    <NativeMenuItem Header="Camera Hitboxes" Command="{Binding ToggleHitboxesCommand}" />
                    <NativeMenuItem Header="Simplified Hitboxes" Command="{Binding ToggleHitboxesCommand}" />
                    <NativeMenuItem Header="Actual Collide Hitboxes" Command="{Binding ToggleHitboxesCommand}" />
                    <NativeMenuItemSeparator />
                    <NativeMenuItem Header="Simplified Graphics" Command="{Binding ToggleHitboxesCommand}" />
                    <NativeMenuItem Header="Gameplay" Command="{Binding ToggleHitboxesCommand}" />
                    <NativeMenuItemSeparator />
                    <NativeMenuItem Header="Center Camera" Command="{Binding ToggleHitboxesCommand}" />
                    <NativeMenuItemSeparator />
                    <NativeMenuItem Header="Info HUD" Command="{Binding ToggleHitboxesCommand}" />
                    <NativeMenuItem Header="TAS Input Info" Command="{Binding ToggleHitboxesCommand}" />
                    <NativeMenuItem Header="Game Info" Command="{Binding ToggleHitboxesCommand}" />
                    <NativeMenuItem Header="Watch Entity Info" Command="{Binding ToggleHitboxesCommand}" />
                    <NativeMenuItem Header="Custom Info" Command="{Binding ToggleHitboxesCommand}" />
                    <NativeMenuItem Header="Subpixel Indicator" Command="{Binding ToggleHitboxesCommand}" />
                    <NativeMenuItemSeparator />
                    <NativeMenuItem Header="Position Decimals" Command="{Binding ToggleHitboxesCommand}" />
                    <NativeMenuItem Header="Speed Decimals" Command="{Binding ToggleHitboxesCommand}" />
                    <NativeMenuItem Header="Velocity Decimals" Command="{Binding ToggleHitboxesCommand}" />
                    <NativeMenuItem Header="Custom Info Decimals" Command="{Binding ToggleHitboxesCommand}" />
                    <NativeMenuItem Header="Subpixel Indicator Decimals" Command="{Binding ToggleHitboxesCommand}" />
                    <NativeMenuItem Header="Unit of Speed" Command="{Binding ToggleHitboxesCommand}" />
                    <NativeMenuItemSeparator />
                    <NativeMenuItem Header="Fast Forward Speed" Command="{Binding ToggleHitboxesCommand}" />
                    <NativeMenuItem Header="Slow Forward Speed" Command="{Binding ToggleHitboxesCommand}" />
                </NativeMenu>
            </NativeMenuItem>
        </NativeMenu>
    </NativeMenu.Menu>
    
    <DockPanel>
        <controls:EditorControl Document="{Binding Document}"
                                KeyUpAction="{Binding KeyUpAction}"
                                KeyDownAction="{Binding KeyDownAction}"
                                CaretPosition="{Binding CaretPosition, Mode=TwoWay}" />
    </DockPanel>
</Window>
